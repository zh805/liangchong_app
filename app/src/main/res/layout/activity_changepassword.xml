<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#aeacac">
        <Button
            android:id="@+id/user_info_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#000"
            android:textSize="23sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textSize="23sp" />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_idCode"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/et_background"
            android:gravity="center"
            android:hint="短信验证码" />

        <Button
            android:id="@+id/bt_idCode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#07efb1"
            android:text="获取验证码" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/et_background"
        android:gravity="center"
        android:hint="请输入6~12位数字、字母组成的密码" />

    <EditText
        android:id="@+id/et_new_password_again"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/et_background"
        android:gravity="center"
        android:hint="请再次输入密码" />

    <Button
        android:id="@+id/bt_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btm_login"
        android:text="确认" />
    
</LinearLayout>
