<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chart_deport"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="粮仓号："
            android:textColor="#000"
            android:textSize="23sp"/>

        <Spinner
            android:id="@+id/sp_chart_deport_number"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:dropDownWidth="120dp"
            android:entries="@array/deport_number"
            android:overlapAnchor="false"
            android:scrollbarSize="23sp"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chart_dev"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="设备号："
            android:textColor="#000"
            android:textSize="23sp"/>

        <Spinner
            android:id="@+id/sp_chart_dev_number"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:dropDownWidth="120dp"
            android:entries="@array/deport_number"
            android:overlapAnchor="false"
            android:scrollbarSize="23sp"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <android.opengl.GLSurfaceView
        android:id="@+id/glsv_content"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备类型:"
                    android:textSize="23sp"/>

                <TextView
                    android:id="@+id/dev_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="23sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备安装时间:"
                    android:textSize="23sp"/>

                <TextView
                    android:id="@+id/dev_install_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="23sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备状态:"
                    android:textSize="23sp"/>

                <TextView
                    android:id="@+id/dev_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="23sp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>